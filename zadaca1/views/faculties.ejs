<%- include('layout') %>
<% title = "Faculties" %>
<h2>Faculties</h2>
<form action="/api/faculties" method="POST">
    <input type="text" name="name" placeholder="Faculty Name" required>
    <input type="text" name="address" placeholder="Address">
    <select name="university">
        <% universities.forEach(university => { %>
            <option value="<%= university._id %>"><%= university.name %></option>
        <% }) %>
    </select>
    <button type="submit">Add Faculty</button>
</form>
<ul>
    <% faculties.forEach(faculty => { %>
        <li>
            <%= faculty.name %> - <%= faculty.address %>
            <form action="/api/faculties/<%= faculty._id %>" method="POST">
                <button type="submit">Delete</button>
            </form>
        </li>
    <% }) %>
</ul>